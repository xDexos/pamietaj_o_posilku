<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#fedc89" >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#ffeec4"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notatka"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"/>

    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipeNoteWriteTextView"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Tutaj wpisz nową notatkę"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="12dp"
        android:padding="5dp"
        android:background="#ffeec4"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveRecipeNoteButton"
        android:layout_gravity="bottom|right"
        android:backgroundTint="#ffeec4"
        android:src="@drawable/add"/>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7e3fc"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/cardView"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#abc4ff">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#c1d3fe">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView"
                android:layout_margin="10dp"
                android:layout_gravity="start|center"
                android:src="@drawable/bakery"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            app:cardCornerRadius="20dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#c1d3fe">

            <EditText
                android:id="@+id/ingredientName"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:maxWidth="180dp"
                android:layout_toEndOf="@id/cardView"
                android:gravity="center"
                android:hint="Nazwa składnika"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#c1d3fe"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/addIngredientButton"
                android:contentDescription="Delete ingredient"
                android:src="@drawable/add"
                android:background="#c1d3fe"/>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredientTypeCardView"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#ccdbfd">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ingredientType"
                android:hint="Typ składnika"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="#c1d3fe" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</FrameLayout>